@model Level

@{
    ViewData["Title"] = "Edit Level";
}

<h1>Edit Level</h1>

<h4>Level</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="d-grid gap-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value = "@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" value = "@Model.Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Days duration</label>
                <input asp-for="Duration" class="form-control" value = "@Model.Duration.Days"/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (Model.IsDeactivated)
                    {
                        <input type="checkbox" class="form-check-input" asp-for="IsDeactivated" checked/> 
                    }
                    else
                    {
                        <input type="checkbox" class="form-check-input" asp-for="IsDeactivated"/> 
                    }
                Is deactivated </label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
