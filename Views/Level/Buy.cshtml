@model Level

@{
    ViewData["Title"] = "Level buy";
}

<h1>Level buy</h1>

<div>
    <h4>This is a simple example of purchasing an access level. Click "buy" to apply the selected access level</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Duration
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration.Days) days 
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Buy">
            
            <input type="hidden" asp-for="Id" />
            
            <input type="submit" value="Buy" class="btn btn-primary" />
           
    </form>
